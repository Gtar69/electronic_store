<h2>Product List</h2>


<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增產品", new_admin_product_path, :class => "btn btn-primary btn-sm") %>
</div>  

<table class="table table-borded">
  <thead>
    <tr>
      <th>#</th>
      <th>Product Name</th>
      <th>Inventory</th> 
      <th>Manage Options</th>
      <th>Manage Options</th>
    </tr>
  </thead>
  <tbody>
    
    <tr>
      <% @products.each do |product|%>
      <td> <%= product.id %> </td>
      <td> <%= product.title %></td>
      <td><%= product.quantity%></td>
      <td> <%= link_to("Edit", edit_admin_product_path(product),:class => "btn btn-primary 
        btn-sm btn-danger") %></td>
      <td><%= link_to("產品下架", admin_product_path(product), :method => :delete, :class =>
      "btn btn-primary btn-sm btn-danger") %></td>
     </tr>
    <% end %>  
   
  </tbody>  

</table>
